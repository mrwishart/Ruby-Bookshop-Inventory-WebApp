<h2><%=@genre.title%></h2>
<a href="/genres/<%= @genre.id %>/edit"><p>(edit genre)</p></a>
<form action="/genres/<%=@genre.id%>/delete" method="post">
  <input type="submit" value="DELETE GENRE!">
</form>
<p>Books currently in-store:</p>

<table>
  <tr>
    <th>Title</th>
    <th>Author(s)</th>
    <th>Edition</th>
    <th>Year Published</th>
    <th>Quantity</th>
  </tr>
<% for book in @genre.books %>
  <tr>
    <td>
      <a href="../books/<%=book.id%>">
      <%=book.title%>
      </a>
    </td>
    <td>
      <% if book.authors.empty? %>
        Missing: Please enter
      <% else %>
        <% for author in book.authors %>
         <a href="../authors/<%=author.id%>"><%= author.pretty_name%></a><br>
        <% end %>
      <% end %>
    </td>
    <td><%=book.edition%></td>
    <td><%=book.year_published%></td>
    <td><%=book.quantity%></td>
  </tr>

<% end %>

</table>
