<form action="/books" method="post">

  <table>
    <tr>
      <td>
        <label for="title">Title:</label>
      </td>
      <td>
        <input id="title" type="text" name="title">
      </td>
    </tr>
    <tr>
      <td>
        <label for="edition">Edition:</label>
      </td>
      <td>
        <input id="edition" type="text" name="edition">
      </td>
    </tr>
    <tr>
      <td>
        <label for="year-published">Year Published:</label>
      </td>
      <td>
        <input id="year-published" type="number" name="year_published" value = "2018">
      </td>
    </tr>
    <tr>
      <td>
        <label for="rrp">RRP (Â£):</label>
      </td>
      <td>
        <input id="rrp" type="number" name="rrp" min="0" step = "0.01">
      </td>
    </tr>
    <tr>
      <td>
        <label for="quantity">Quantity:</label>
      </td>
      <td>
        <input id="quantity" type="number" name="quantity" min="1" value="1">
      </td>
    </tr>
    <tr>
      <td>
        <label for="wholesaler">Wholesaler:</label>
      </td>
      <td>
        <select id="wholesaler" name="wholesale_id">
          <option value= "0">Self-Published</option>
          <%for wholesaler in @wholesalers %>
            <option value="<%=wholesaler.id%>"><%=wholesaler.name%></option>
          <%end%>
        </select>
      </td>
    </tr>
    <tr>
      <td>
        <label for="description">Description:</label>
      </td>
      <td>
        <textarea id="description"  name="description" rows = "3" col = "26"></textarea>
      </td>
    </tr>
  </table>
  <input type ="submit" value="Save Book">

</form>
