<div class = "sub-header-container">
  <div class = "sub-header">

    <a href="/authors/<%= @author.id %>/edit">Edit Name</a>

    <h4><%=@author.pretty_name%></h4>

    <div class = "button">
      <form action="/authors/<%=@author.id%>/delete" method="post">
        <input type="submit" value="DELETE AUTHOR!">
      </form>
    </div>

  </div>
</div>


<% if !@author.books.empty? %>

<div class = "info-table">
  
  <table>

    <tr>
      <th>Title</th>
      <th>Genre(s)</th>
      <th>Edition</th>
      <th>Year Published</th>
      <th>Quantity</th>
    </tr>

    <% for book in @author.books %>

    <tr>
      <td>
        <a href="../books/<%=book.id%>">
          <%=book.title%>
        </a>
      </td>
      <td>
        <% if book.genres.empty? %>
        <a href="/bookgenres/<%=book.id%>/edit"><%=CSSHelper.no_objects%></a>
        <% else %>
        <% for genre in book.genres %>
        <a href="../genres/<%=genre.id%>"><%= genre.title%></a><br>
        <% end %>
        <% end %>
      </td>
      <td><%=book.edition%></td>
      <td><%=book.year_published%></td>
      <td><%=book.quantity%></td>
    </tr>

    <% end %>

  </table>
</div>
<% end %>
